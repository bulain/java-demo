<decorators defaultdir="/decorators">
    <decorator name="main" page="main.jsp">
        <pattern>*</pattern>
    </decorator>
    <decorator name="error" page="error.jsp">
        <pattern>/error/*</pattern>
    </decorator>
    <decorator name="index" page="index.jsp">
        <pattern>/index/*</pattern>
    </decorator>
</decorators>