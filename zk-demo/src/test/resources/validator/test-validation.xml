<?xml version="1.0" encoding="UTF-8"?>
<validators>
    <command name="testCmd" namespace="testNamespace">
        <field name="testField">
            <field-validator type="required">
                <message key="test.required"></message>
            </field-validator>
            <field-validator type="requiredstring">
                <param name="trim">true</param>
                <message key="test.requiredstring"></message>
            </field-validator>
            <field-validator type="requireditem">
                <param name="trim">true</param>
                <message key="test.requireditem"></message>
            </field-validator>
            <field-validator type="int">
                <param name="min">10</param>
                <param name="max">50</param>
                <message key="test.int"></message>
            </field-validator>
            <field-validator type="long">
                <param name="min">10</param>
                <param name="max">50</param>
                <message key="test.long"></message>
            </field-validator>
            <field-validator type="short">
                <param name="min">10</param>
                <param name="max">50</param>
                <message key="test.short"></message>
            </field-validator>
            <field-validator type="date">
                <param name="min">2013/01/01</param>
                <param name="max">2013/12/31</param>
                <message key="test.date"></message>
            </field-validator>
            <field-validator type="stringlength">
                <param name="minLength">10</param>
                <param name="maxLength">50</param>
                <message key="test.stringlength"></message>
            </field-validator>
        </field>

    </command>
</validators>
