<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <import resource="classpath*:META-INF/cxf/cxf.xml" />

    <bean id="mimeServiceImpl" class="com.bulain.cxf.mime.MimeServiceImpl" />

    <jaxrs:server address="http://localhost:8083/jaxrs">
        <jaxrs:serviceBeans>
            <ref bean="mimeServiceImpl" />
        </jaxrs:serviceBeans>
        <jaxrs:features>
            <bean class="org.apache.cxf.feature.LoggingFeature" />
        </jaxrs:features>
        <jaxrs:providers>
            <bean class="org.apache.cxf.jaxrs.provider.MultipartProvider" />
        </jaxrs:providers>
    </jaxrs:server>
</beans>