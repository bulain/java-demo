<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="reference" namespace="/reference" extends="order-default">
        <action name="list" class="referenceAction" method="list">
            <result>/reference/list.jsp</result>
            <result name="input" >/reference/list.jsp</result>
        </action>
        <action name="new" class="referenceAction" method="newn">
            <result>/reference/new.jsp</result>
        </action>
		<action name="create" class="referenceAction" method="create">
			<interceptor-ref name="orderStack" />
            <result type="redirectAction">list</result>
            <result name="input" >/reference/new.jsp</result>
        </action>
        <action name="edit" class="referenceAction" method="edit">
            <result>/reference/edit.jsp</result>
        </action>
		<action name="update" class="referenceAction" method="update">
			<interceptor-ref name="orderStack" />
			<result type="redirectAction">list</result>
            <result name="input" >/reference/edit.jsp</result>
        </action>
        <action name="show" class="referenceAction" method="show">
            <result>/reference/show.jsp</result>
        </action>
		<action name="destroy" class="referenceAction" method="destroy">
            <result type="redirectAction">list</result>
            <result name="input" type="redirectAction">list</result>
        </action>
    </package>
</struts>
