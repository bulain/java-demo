<project name="xml-demo" default="xjc" basedir=".">
	<property file="build.properties" />

	<path id="classpath">
		<fileset dir="target/${ant.project.name}/WEB-INF/lib">
			<include name="*.jar" />
		</fileset>
		<path location="target/classes" />
	</path>

	<target name="xjc">
		<mkdir dir="${xjc.outdir}" />
		<exec executable="xjc">
			<arg line="-p ${xjc.package} -d ${xjc.outdir} -xmlschema ${xjc.schema}" />
		</exec>
	</target>

</project>
