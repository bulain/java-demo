<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bulain.common.dao.AuthorizeMapper" >
<!-- custom -->
  <sql id="where">
  	<where>
  		<if test="controller!=null and controller!='' ">
  			and controller = #{controller}
  		</if>
  		<if test="action!=null and action!=''">
  			and action = #{action}
  		</if>
  	</where>
  </sql>
  <select id="find" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.AuthorizeSearch">
  	select 
    <include refid="Base_Column_List" />
    from authorizes
    <include refid="where"/>
    <include refid="common.orderby"/>
  </select>
  <select id="count" resultType="java.lang.Long" parameterType="com.bulain.common.pojo.AuthorizeSearch">
  	select count(*)
    from authorizes
    <include refid="where"/>
  </select>
  <select id="page" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.AuthorizeSearch">
  	<![CDATA[${PAGE_HEAD}]]>
  	select 
    <include refid="Base_Column_List" />
    from authorizes
    <include refid="where"/>
    <include refid="common.orderby"/>
    <![CDATA[${PAGE_FOOT}]]>
  </select>
</mapper>