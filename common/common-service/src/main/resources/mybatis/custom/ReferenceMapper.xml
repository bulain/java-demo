<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bulain.common.dao.ReferenceMapper" >
  <!-- custom -->
  <sql id="where">
  	<where>
  		<if test="name != null and name != '' ">
  			and name = #{name}
  		</if>
  		<if test="code != null and code != '' ">
  			and code = #{code}
  		</if>
  		<if test="lang != null and lang != '' ">
  			and lang = #{lang}
  		</if>
  		<if test="catagory != null and catagory != '' ">
  			and catagory = #{catagory}
  		</if>
  	</where>
  </sql>
  <select id="find" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.ReferenceSearch">
  	select 
    <include refid="Base_Column_List" />
    <![CDATA[
    from `references`
    ]]>
    <include refid="where"/>
    <include refid="common.orderby"/>
  </select>
  <select id="count" resultType="java.lang.Long" parameterType="com.bulain.common.pojo.ReferenceSearch">
  	<![CDATA[
    select count(*)
    from `references`
    ]]>
    <include refid="where"/>
  </select>
  <select id="page" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.ReferenceSearch">
  	<![CDATA[${PAGE_HEAD}]]>
  	select 
    <include refid="Base_Column_List" />
    <![CDATA[
    from `references`
    ]]>
    <include refid="where"/>
    <include refid="common.orderby"/>
    <![CDATA[${PAGE_FOOT}]]>
  </select>
  
  <resultMap id="ItemMap" type="com.bulain.common.pojo.Item" >
    <result column="code" property="key" jdbcType="VARCHAR" />
    <result column="text" property="value" jdbcType="VARCHAR" />
  </resultMap>
  <select id="selectListByExample" resultMap="ItemMap" parameterType="com.bulain.common.pojo.ReferenceSearch">
  <![CDATA[
  	select code, text
    from `references`
    where name=#{name}
    and lang=#{lang}
    and catagory=#{catagory}
    order by code
    ]]>
  </select>
  <select id="selectItemByExample" resultMap="ItemMap" parameterType="com.bulain.common.pojo.ReferenceSearch">
  <![CDATA[
  	select code, text
    from `references`
    where name=#{name}
    and code=#{code}
    and lang=#{lang}
    and catagory=#{catagory}
    ]]>
  </select>
</mapper>