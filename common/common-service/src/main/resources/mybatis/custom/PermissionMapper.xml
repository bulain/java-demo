<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bulain.common.dao.PermissionMapper" >
  <!-- custom -->
  <sql id="where">
  	<where>
  		<if test="permission != null and permission != '' ">
  			and permission = #{permission}
  		</if>
  	</where>
  </sql>
  <select id="find" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.PermissionSearch">
  	select 
    <include refid="Base_Column_List" />
    from permissions
    <include refid="where"/>
    <include refid="common.orderby"/>
  </select>
  <select id="count" resultType="java.lang.Long" parameterType="com.bulain.common.pojo.PermissionSearch">
  	select count(*)
    from permissions
    <include refid="where"/>
  </select>
  <select id="page" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.PermissionSearch">
  	<![CDATA[${PAGE_HEAD}]]>
  	select 
    <include refid="Base_Column_List" />
    from permissions
    <include refid="where"/>
    <include refid="common.orderby"/>
    <![CDATA[${PAGE_FOOT}]]>
  </select>
  
    <select id="findPermissionByGroupId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select p.id, p.permission, p.created_by, p.created_at, p.updated_by, p.updated_at
    from permissions p
    where exists (select 1 from group_permissions gp where gp.permission = p.permission and gp.group_id = #{groupId})
    order by p.id
  </select>
  <select id="findPermissionByNoGroupId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select p.id, p.permission, p.created_by, p.created_at, p.updated_by, p.updated_at
    from permissions p
    where not exists (select 1 from group_permissions gp where gp.permission = p.permission and gp.group_id = #{groupId})
    order by p.id
  </select>
</mapper>