<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bulain.common.dao.ContentMapper" >
<!-- custom -->
  <sql id="where">
  	<where>
  		<if test="fileName != null and fileName != '' ">
  			and file_name = #{fileName}
  		</if>
  		<if test="contentType != null and contentType != '' ">
  			and content_type = #{contentType}
  		</if>
  		<if test="refId != null and refId != '' ">
  			and ref_id = #{refId}
  		</if>
  		<if test="refName != null and refName != '' ">
  			and ref_name = #{refName}
  		</if>
  		<if test="catagory != null and catagory != '' ">
  			and catagory = #{catagory}
  		</if>
  		<if test="lang != null and lang != '' ">
  			and lang = #{lang}
  		</if>
  	</where>
  </sql>
  <select id="find" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.ContentSearch">
  	select 
    <include refid="Base_Column_List" />
    from contents
    <include refid="where"/>
    <include refid="common.orderby"/>
  </select>
  <select id="count" resultType="java.lang.Long" parameterType="com.bulain.common.pojo.ContentSearch">
  	select count(*)
    from contents
    <include refid="where"/>
  </select>
  <select id="page" resultMap="BaseResultMap" parameterType="com.bulain.common.pojo.ContentSearch">
  	<![CDATA[${PAGE_HEAD}]]>
  	select 
    <include refid="Base_Column_List" />
    from contents
    <include refid="where"/>
    <include refid="common.orderby"/>
    <![CDATA[${PAGE_FOOT}]]>
  </select>
  <select id="selectByPrimaryKeyWithoutBLOBs" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from contents
    where id = #{id}
  </select>
</mapper>